@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Entities.Dtos.CustomerDtos.CustomerDto

@{
    ViewData["Title"] = "Müşteri Ekle";
}

<div class="text-left">
    <form asp-action="Create" asp-controller="Customer">
        <div class="col-lg-12">
            <label asp-for="GovernmentId" class="col-lg-4 col-form-label text-lg-start"></label>
            <input type="number" asp-for="GovernmentId" maxlength="11" max="99999999999" class="form-control form-control-lg form-control-solid" autocomplete="off" />
            <span asp-validation-for="GovernmentId" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <label asp-for="Name" class="col-lg-4 col-form-label text-lg-start"></label>
            <input type="text" asp-for="Name" maxlength="100" class="form-control form-control-lg form-control-solid" autocomplete="off" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <label asp-for="Surname" class="col-lg-4 col-form-label text-lg-start"></label>
            <input type="text" asp-for="Surname" maxlength="100" class="form-control form-control-lg form-control-solid" autocomplete="off" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <label asp-for="BirthYear" class="col-lg-4 col-form-label text-lg-start"></label>
            <select asp-for="BirthYear" asp-items="ViewBag.BirthYears" aria-label="Doğum Tarihi Yılı Seçiniz" data-control="select2" data-placeholder="Doğum Tarihi Yılı Seçiniz..." class="form-select form-select-solid form-select-lg">
                <option value="">Doğum Tarihi Yılı Seçiniz...</option>
            </select>
            <span asp-validation-for="BirthYear" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <label asp-for="ApplicationId" class="col-lg-4 col-form-label text-lg-start"></label>
            <select asp-for="ApplicationId" asp-items="ViewBag.Applications" aria-label="Uygulama Seçiniz" data-control="select2" data-placeholder="Uygulama Seçiniz..." class="form-select form-select-solid form-select-lg">
                <option value="">Uygulama Seçiniz...</option>
            </select>
            <span asp-validation-for="ApplicationId" class="text-danger"></span>
        </div>
        <div class="col-lg-12 mt-4">
            <a  asp-action="Index" asp-controller="Customer" class="btn btn-outline-secondary">İptal</a>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>

    </form>
    @if (Model is not null && !string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="col-lg-12 alert alert-danger mt-3">
            @Model?.ErrorMessage
        </div>
    }
</div>