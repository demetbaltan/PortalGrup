@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Entities.Dtos.ApplicationDtos.ApplicationDto

@{
    ViewData["Title"] = "Uygulama Ekle";
}

<div class="text-left">
    <form asp-action="Create" asp-controller="Application">
        <div class="col-lg-12">
            <label asp-for="Name" class="col-lg-4 col-form-label text-lg-start"></label>
            <input type="text" asp-for="Name" maxlength="100" class="form-control form-control-lg form-control-solid" autocomplete="off" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <label asp-for="IsNviActive" class="col-lg-4 col-form-label text-lg-start"></label>
            <input type="checkbox" asp-for="IsNviActive" class="form-check-input mb-3 mb-lg-0" checked/>
            <span asp-validation-for="IsNviActive" class="text-danger"></span>
        </div>
        <div class="col-lg-12 mt-4">
            <a asp-action="Index" asp-controller="Application" class="btn btn-outline-secondary">İptal</a>
            <button type="submit" class="btn btn-success">Kaydet</button>
        </div>

    </form>
    @if (Model is not null && !string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="col-lg-12 alert alert-danger mt-3">
            @Model?.ErrorMessage
        </div>
    }
</div>